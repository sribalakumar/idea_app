<div class="page-header">
  <h1>
    User accounts
    <a href="/user_accounts/new" class="btn btn-lg btn-success">New User account</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @user_accounts.each do |user_account| %>
      <tr>
        <td><%= user_account.email %></td>
        <td><%= user_account.password %></td>
        <td>
          <a href="/user_accounts/<%= user_account.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @user_accounts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
